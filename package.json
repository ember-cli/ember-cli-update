    "node": ">=12.13"
  },
  "files": [
    "bin",
    "src"
  ],
  "dependencies": {
    "boilerplate-update": "^1.0.6",
    "debug": "^4.2.0",
    "execa": "^5.0.0",
    "fs-extra": "^9.1.0",
    "inquirer": "^7.0.0",
    "npm-package-arg": "^8.0.1",
    "resolve": "^1.10.0",
